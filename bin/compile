#!/bin/bash
# Usage: bin/compile BUILD_DIR CACHE_DIR ENV_DIR

set -e
set -o pipefail

BUILD_DIR=$1
CACHE_DIR=$2
ENV_DIR=$3

indent() {
  sed -u 's/^/       /'
}

echo "-----> Install Emacs" | indent

make -f $(dirname $0)/compile.mk build install BUILD_DIR=$BUILD_DIR | indent

export PATH=$PATH:/app/.heroku/vendor/bin
emacs --version | indent


echo "-----> Install Cask" | indent

curl -fsSL "https://raw.githubusercontent.com/cask/cask/master/go" | python | indent
# TODO: How install cask with selected directory?
cp -v -R $Home/.cask $BUILD_DIR | indent

export PATH=$PATH:$HOME/.cask/bin
cd $BUILD_DIR
cask install | indent

echo "...done" | indent
